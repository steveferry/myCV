<% i=0 %>
<script type="text/javascript">
	var id = 0;
	var init = false;
	function addInputSchool(frm, lastId) {	
		if(!init)
		{
			id = lastId;
			init = true;
		}
		id+=1;
		var row = '<div id="school'+id+'">school'+id+'<input type="text" name="content[school['+id+']][date]" size="4" value=""> <input type="text" name="content[school['+id+']][name]" value=""> <a href="#" onClick="delInputSchool'+id+');">remove</a></div>';
		jQuery('#addFieldSchool').append(row);
	}
	function delInputSchool(id){
		$('#school'+id+'').remove();
	}
</script>
